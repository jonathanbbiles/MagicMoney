ALPACA_API_KEY=YOUR_ALPACA_API_KEY
ALPACA_SECRET_KEY=YOUR_ALPACA_SECRET_KEY
ALPACA_API_BASE=https://api.alpaca.markets/v2
API_TOKEN=CHANGE_ME_TO_A_LONG_RANDOM_STRING
CORS_ALLOWED_ORIGINS=http://localhost:19006,http://localhost:8081
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=120
# === Exits & Risk ===
EXIT_ORDER_CLASS=oco            # "oco" => use native OCO (TP+SL). Any other value -> legacy
STOP_LOSS_BPS=60                # stop loss distance from entry, in basis points (0.60%)
STOP_LIMIT_OFFSET_BPS=10        # stop-limit is an extra 0.10% below the stop price
POST_ONLY_SELL=false            # if true, TP sells are post-only maker; false allows taker fills
REPRICE_EVERY_SECONDS=5         # exit manager inspection cadence
SELL_ORDER_TTL_MS=12000         # how long before we replace/repost a TP
TAKER_EXIT_ON_TOUCH=true        # allow taker IOC when price touches target
FORCE_EXIT_SECONDS=120          # absolute max hold time before forced exit
MAX_SPREAD_BPS_TO_TRADE=40      # skip entries if spread is wider than this
